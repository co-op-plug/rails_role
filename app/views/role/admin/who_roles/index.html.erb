<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WhoRole.human_attribute_name(:who_id) %></th>
      <th><%= WhoRole.human_attribute_name(:created_at) %></th>
      <th>
        <%= link_to new_admin_role_who_role_path(@role), remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @who_roles.each do |who_role| %>
    <tr>
      <td><%= who_role.who_id %></td>
      <td><%= who_role.created_at %></td>
      <td>
        <%= link_to admin_who_role_path(who_role), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_who_role_path(who_role), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_who_role_path(who_role), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @who_roles %>
